\begin_deeper
\begin_layout Itemize
Tobin's q: COMPUSTAT: 
\begin_inset Formula $\frac{(EMV+DMV)}{(EBV+DBV)}$
\end_inset

 where 
\begin_inset Formula $EMV$
\end_inset

 is equity market value, 
\begin_inset Formula $DMV$
\end_inset

 is debt market value, 
\begin_inset Formula $EBV$
\end_inset

 is equity book value, and 
\begin_inset Formula $DBV$
\end_inset

 is debt book value
\end_layout

\begin_layout Itemize
MTB: COMPUSTAT: Equity market value / equity book value
\end_layout

\begin_layout Itemize
MVA: COMPUSTAT: Equity market value - book value of equity and debt
\end_layout

